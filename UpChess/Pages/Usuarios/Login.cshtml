@page
@model WebApplication4.Pages.Usuarios.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post">
    <div class="card card-body col-sm-4">
        <div class="form-group">
            <lable asp-for="dados.email">Email</lable>
            <input type="text" asp-for="dados.email" class="form-control" />
            <span asp-validation-for="dados.email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <lable asp-for="dados.senha">Senha</lable>
            <input type="password" asp-for="dados.senha" class="form-control" />
            <span asp-validation-for="dados.senha" class="text-danger"></span>
        </div>
        <button class="btn btn-dark">entrar</button>
    </div>
</form>